<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text4"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="#673AB7"
        android:paddingHorizontal="40sp"
        android:paddingVertical="15sp"
        android:text="4"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/text3"
        android:layout_above="@+id/text4"
        android:layout_toLeftOf="@+id/text4"
        android:background="#E3CC08"
        android:paddingHorizontal="40sp"
        android:paddingVertical="15sp"
        android:text="3"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/text2"
        android:layout_above="@+id/text3"
        android:layout_toLeftOf="@+id/text3"
        android:background="#4CAF50"
        android:paddingHorizontal="40sp"
        android:paddingVertical="15sp"
        android:text="2"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_above="@+id/text2"
        android:layout_toLeftOf="@+id/text2"
        android:background="#E60618"
        android:paddingHorizontal="40sp"
        android:paddingVertical="15sp"
        android:text="1"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/text5"
        android:layout_below="@+id/text4"
        android:layout_toLeftOf="@+id/text4"
        android:background="#AC6F4F"
        android:paddingHorizontal="40sp"
        android:paddingVertical="15sp"
        android:text="5"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/text6"
        android:layout_below="@+id/text5"
        android:layout_toLeftOf="@+id/text5"
        android:background="#783228"
        android:paddingHorizontal="40sp"
        android:paddingVertical="15sp"
        android:text="6"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@+id/text6"
        android:layout_toLeftOf="@+id/text6"
        android:background="#28D4EA"
        android:paddingHorizontal="40sp"
        android:paddingVertical="15sp"
        android:text="7"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>